<button class="open-modal">Novo anúnico</button>

<form class="pesquisar-anuncios">
    <label>
        <span>Qtde. hospedes</span>
        <input name="hospedes" type="number" placeholder="Quantidade hospedes." />
    </label>
    <label>
        <span>Acomodação</span>
        <select name="bairro">
            <option value="">Selecione o bairro</option>
            <option value="Altiplano">Altiplano</option>
            <option value="Bancários">Bancários</option>
            <option value="Bessa">Bessa</option>
            <option value="Cabo Branco">Cabo Branco</option>
            <option value="Manaira">Manaira</option>
            <option value="Portal do Sol">Portal do Sol</option>
            <option value="Tambaú">Tambaú</option>
        </select>
        </select>
    </label>
    <label>
        <span>Check-in</span>
        <input name="check_in" type="datetime-local" required />
    </label>
    <label>
        <span>Check-out</span>
        <input name="check_out" type="datetime-local" required />
    </label>
    <label title="Clique para pesquisar acomodações livre para anuncios.">
        <span>&nbsp;</span>
        <button>Pesquisar</button>
    </label>
</form>


<div class="title">LISTA DE ANÚNCIOS</div>

<div class="modal">
    <div class="header">
        <strong class="title">Cadastrar anuncios</strong>
        <span class="material-icons close-modal">close</span>
    </div>
    <div class="content">
        <form class="cadastro-anuncios"><label>
                <span>Nome</span>
                <input name="nome" placeholder="Ex.: Maravilhoso apartamento em JP" required />
            </label>
            <label>
                <span>Bairro</span>
                <select name="bairro" required>
                    <option value="">Selecione o bairro</option>
                    <option value="Altiplano">Altiplano</option>
                    <option value="Bancários">Bancários</option>
                    <option value="Bessa">Bessa</option>
                    <option value="Cabo Branco">Cabo Branco</option>
                    <option value="Manaira">Manaira</option>
                    <option value="Portal do Sol">Portal do Sol</option>
                    <option value="Tambaú">Tambaú</option>
                </select>
            </label>
            <label>
                <span>Hospedes</span>
                <input name="hospedes" type="number" placeholder="Ex.: 6" required />
            </label>
            <label>
                <span>Comissão</span>
                <input name="comissao" type="number" placeholder="Ex.: 20" required />
            </label>
            <label>
                <span>&nbsp;</span>
                <button>Cadastrar</button>
            </label>
        </form>
    </div>
</div>
<div class="list">
    <table>
        <thead>
            <tr>
                <td width="3%"></td>
                <td>NOME</td>
                <td>BAIRRO</td>
                <td>HOSPEDES</td>
                <td>COMISSÃO</td>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <td title="Clique para deletar a reserva">
                    <span id="{{ _id }}" class="material-icons anuncios">delete</span>
                </td>
                <td>{{nome}}</td>
                <td>{{bairro}}</td>
                <td>{{hospedes}}</td>
                <td>{{comissao}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <p class="message">Nenhuma propriedade cadastrada.</p>
</div>
<script src="/js/anuncios.js"></script>